<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">


    <TextView
        android:id="@+id/user_item2_txtView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="33.6"
        android:gravity="center"
        android:text="Fraction Meaning"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="116dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="66.3"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/user_item2_txtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Score: 99 / 99"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="88dp" />

        <TextView
            android:id="@+id/user_item2_txtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Time Spent: 99m59s"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="88dp" />
    </LinearLayout>

</LinearLayout>