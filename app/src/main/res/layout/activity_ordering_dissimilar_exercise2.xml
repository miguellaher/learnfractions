                android:id="@+id/od_txtDenom5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="@+id/od_imgLine5"
                app:layout_constraintStart_toStartOf="@+id/od_imgLine5"
                app:layout_constraintTop_toBottomOf="@+id/od_imgLine5" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/od_fraction4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/od_fraction5"
            app:layout_constraintEnd_toStartOf="@+id/od_fraction5"
            app:layout_constraintTop_toTopOf="@+id/od_fraction5">

            <ImageView
                android:id="@+id/od_imgLine4"
                android:layout_width="70dp"
                android:layout_height="12dp"
