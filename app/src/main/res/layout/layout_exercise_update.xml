<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="@+id/exercise_update_chk_RC_consecutive"
        app:layout_constraintStart_toStartOf="@+id/exercise_update_chk_RC_consecutive"
        app:layout_constraintTop_toBottomOf="@+id/exercise_update_chk_RC_consecutive">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:text="Max Errors:"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="119dp" />

        <EditText
            android:id="@+id/exercise_update_inputMaxErrors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:maxLength="2"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="108dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/exercise_update_txtTopicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exercise_update_txtExerciseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/exercise_update_txtTopicName"
        app:layout_constraintStart_toStartOf="@+id/exercise_update_txtTopicName"
        app:layout_constraintTop_toBottomOf="@+id/exercise_update_txtTopicName" />

    <CheckBox
        android:id="@+id/exercise_update_chk_ME_consecutive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Consecutive"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout1"
        app:layout_constraintStart_toStartOf="@+id/linearLayout1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

    <CheckBox
        android:id="@+id/exercise_update_chk_RC_consecutive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Consecutive"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_update_txtExerciseNum">


        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:text="Required Corrects:"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="119dp" />

        <EditText
            android:id="@+id/exercise_update_inputRequiredCorrects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:maxLength="2"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="108dp" />

    </LinearLayout>

    <Button
        android:id="@+id/exercise_update_btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:text="UPDATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exercise_update_chk_ME_consecutive"
        app:layout_constraintStart_toStartOf="@+id/exercise_update_chk_ME_consecutive"
        app:layout_constraintTop_toBottomOf="@+id/exercise_update_chk_ME_consecutive" />
</android.support.constraint.ConstraintLayout>