<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lessons.comparing_dissimilar_fractions.ComparingDissimilarExerciseActivity">

    <include
        layout="@layout/layout_toolbar"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/d2_btnGreater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/greaterThan"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/d2_btnEquals"
            app:layout_constraintEnd_toStartOf="@+id/d2_btnEquals"
            app:layout_constraintTop_toTopOf="@+id/d2_btnEquals" />

        <Button
            android:id="@+id/d2_btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

        <Button
            android:id="@+id/d2_btnLess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/lessThan"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/d2_btnEquals"
            app:layout_constraintStart_toEndOf="@+id/d2_btnEquals"
            app:layout_constraintTop_toTopOf="@+id/d2_btnEquals" />

        <ImageView
            android:id="@+id/cde2_imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/d2_txtInstruction"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="compare the two fractions"
            app:layout_constraintBottom_toBottomOf="@+id/cde2_imgAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cde2_imgAvatar"
            app:layout_constraintTop_toTopOf="@+id/cde2_imgAvatar" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.20">

            <TextView
                android:id="@+id/d2_txtCompareSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="80sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002" />

            <TextView
                android:id="@+id/d2_txtDenom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="@+id/imgLine2"
                app:layout_constraintStart_toStartOf="@+id/imgLine2"
                app:layout_constraintTop_toBottomOf="@+id/imgLine2" />

            <TextView
                android:id="@+id/d2_txtNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/imgLine2"
                app:layout_constraintEnd_toEndOf="@+id/imgLine2"
                app:layout_constraintStart_toStartOf="@+id/imgLine2" />

            <TextView
                android:id="@+id/d2_txtDenom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="@+id/imgLine1"
                app:layout_constraintStart_toStartOf="@+id/imgLine1"
                app:layout_constraintTop_toBottomOf="@+id/imgLine1" />

            <TextView
                android:id="@+id/d2_txtNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/imgLine1"
                app:layout_constraintEnd_toEndOf="@+id/imgLine1"
                app:layout_constraintStart_toStartOf="@+id/imgLine1" />

            <ImageView
                android:id="@+id/imgLine2"
                android:layout_width="80dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line" />

            <ImageView
                android:id="@+id/imgLine1"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginEnd="64dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgLine2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/d2_txtProduct2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/d1_txtNum2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/d2_txtProduct1"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="99"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/d2_txtNum1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/d2_txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="99 / 99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>