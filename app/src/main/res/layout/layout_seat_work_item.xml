<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:id="@+id/seat_work_item_txtView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="33.6"
        android:gravity="center"
        android:text="Fraction Meaning"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="116dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="66.3"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/seat_work_item_txtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="center"
            android:text="99 Students"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="88dp" />

        <TextView
            android:id="@+id/seat_work_item_txtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Avg Score: 100.0%"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="88dp" />

        <TextView
            android:id="@+id/seat_work_item_txtView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Avg Time: 99m59s"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="88dp" />
    </LinearLayout>
</LinearLayout>