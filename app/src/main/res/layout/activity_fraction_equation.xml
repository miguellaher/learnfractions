<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessons.adding_similar.AddingSimilarExerciseActivity">

    <include layout="@layout/layout_toolbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fe_clChoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fe_clFraction3">

            <Button
                android:id="@+id/fe_btnChoice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fe_btnChoice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="@+id/fe_btnChoice3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fe_btnChoice3"
                app:layout_constraintTop_toTopOf="@+id/fe_btnChoice3" />

            <Button
                android:id="@+id/fe_btnChoice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="@+id/fe_btnChoice2"
                app:layout_constraintStart_toEndOf="@+id/fe_btnChoice2"
                app:layout_constraintTop_toTopOf="@+id/fe_btnChoice2" />

            <Button
                android:id="@+id/fe_btnChoice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="@+id/fe_btnChoice1"
                app:layout_constraintStart_toEndOf="@+id/fe_btnChoice1"
                app:layout_constraintTop_toTopOf="@+id/fe_btnChoice1" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fe_clFraction3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/fe_txtEqual"
            app:layout_constraintStart_toEndOf="@+id/fe_txtEqual"
            app:layout_constraintTop_toTopOf="@+id/fe_txtEqual">

            <ImageView
                android:id="@+id/fe_imgLine3"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line" />

            <EditText
                android:id="@+id/fe_inputDenom"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="99"
                android:textAlignment="center"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="@+id/fe_imgLine3"
                app:layout_constraintStart_toStartOf="@+id/fe_imgLine3"
                app:layout_constraintTop_toBottomOf="@+id/fe_imgLine3" />

            <EditText
                android:id="@+id/fe_inputNum"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"
                android:text="99"
                android:textAlignment="center"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/fe_imgLine3"
                app:layout_constraintEnd_toEndOf="@+id/fe_imgLine3"
                app:layout_constraintStart_toStartOf="@+id/fe_imgLine3" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_Fraction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3">

            <ImageView
                android:id="@+id/fe_imgLine2"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/fe_txtNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/fe_imgLine2"
                app:layout_constraintEnd_toEndOf="@+id/fe_imgLine2"
                app:layout_constraintStart_toStartOf="@+id/fe_imgLine2" />

            <TextView
                android:id="@+id/fe_txtDenom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="@+id/fe_imgLine2"
                app:layout_constraintStart_toStartOf="@+id/fe_imgLine2"
                app:layout_constraintTop_toBottomOf="@+id/fe_imgLine2" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/fe_txtSign"
            app:layout_constraintEnd_toStartOf="@+id/fe_txtSign"
            app:layout_constraintTop_toTopOf="@+id/fe_txtSign">

            <ImageView
                android:id="@+id/fe_imgLine1"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/fe_txtNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/fe_imgLine1"
                app:layout_constraintEnd_toEndOf="@+id/fe_imgLine1"
                app:layout_constraintStart_toStartOf="@+id/fe_imgLine1" />

            <TextView
                android:id="@+id/fe_txtDenom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="@+id/fe_imgLine1"
                app:layout_constraintStart_toStartOf="@+id/fe_imgLine1"
                app:layout_constraintTop_toBottomOf="@+id/fe_imgLine1" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/fe_txtScore"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="99 / 99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fe_txtEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/cl_Fraction2"
            app:layout_constraintStart_toEndOf="@+id/cl_Fraction2"
            app:layout_constraintTop_toTopOf="@+id/cl_Fraction2" />

        <TextView
            android:id="@+id/fe_txtSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/cl_Fraction2"
            app:layout_constraintEnd_toStartOf="@+id/cl_Fraction2"
            app:layout_constraintTop_toTopOf="@+id/cl_Fraction2" />

        <Button
            android:id="@+id/fe_btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CHECK"
            app:layout_constraintEnd_toEndOf="@+id/fe_clFraction3"
            app:layout_constraintStart_toEndOf="@+id/fe_txtEqual"
            app:layout_constraintTop_toBottomOf="@+id/fe_clFraction3" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/fe_txtInstruction"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="solve"
                app:layout_constraintBottom_toBottomOf="@+id/gifAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gifAvatar"
                app:layout_constraintTop_toTopOf="@+id/gifAvatar" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifAvatar"
                android:layout_width="101dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>