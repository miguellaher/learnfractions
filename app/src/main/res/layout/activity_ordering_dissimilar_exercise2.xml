            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/od_fraction2"
            app:layout_constraintStart_toEndOf="@+id/od_fraction2"
            app:layout_constraintTop_toTopOf="@+id/od_fraction2">

            <ImageView
