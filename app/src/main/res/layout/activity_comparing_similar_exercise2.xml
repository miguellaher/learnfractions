<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext=".lessons.comparing_similar_fractions.ComparingSimilarExercise2Activity">

    <include
        layout="@layout/layout_toolbar"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/c2_txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="99 / 99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cse2_imgLine1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/c2_compareSign"
            app:layout_constraintEnd_toStartOf="@+id/c2_compareSign"
            app:layout_constraintTop_toTopOf="@+id/c2_compareSign"
            app:srcCompat="@drawable/line" />

        <ImageView
            android:id="@+id/cse2_imgLine2"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/c2_compareSign"
            app:layout_constraintStart_toEndOf="@+id/c2_compareSign"
            app:layout_constraintTop_toTopOf="@+id/c2_compareSign"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/c2_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="80sp"
            app:layout_constraintBottom_toTopOf="@+id/cse2_imgLine2"
            app:layout_constraintEnd_toEndOf="@+id/cse2_imgLine2"
            app:layout_constraintStart_toStartOf="@+id/cse2_imgLine2" />

        <TextView
            android:id="@+id/c2_denom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="@+id/cse2_imgLine1"
            app:layout_constraintStart_toStartOf="@+id/cse2_imgLine1"
            app:layout_constraintTop_toBottomOf="@+id/cse2_imgLine1" />

        <TextView
            android:id="@+id/c2_denom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="@+id/cse2_imgLine2"
            app:layout_constraintStart_toStartOf="@+id/cse2_imgLine2"
            app:layout_constraintTop_toBottomOf="@+id/cse2_imgLine2" />

        <TextView
            android:id="@+id/c2_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="80sp"
            app:layout_constraintBottom_toTopOf="@+id/cse2_imgLine1"
            app:layout_constraintEnd_toEndOf="@+id/cse2_imgLine1"
            app:layout_constraintStart_toStartOf="@+id/cse2_imgLine1" />

        <TextView
            android:id="@+id/c2_compareSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="="
            android:textSize="80sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <Button
            android:id="@+id/c2_btnGreater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/greaterThan"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/c2_btnEqual"
            app:layout_constraintEnd_toStartOf="@+id/c2_btnEqual"
            app:layout_constraintTop_toTopOf="@+id/c2_btnEqual" />

        <Button
            android:id="@+id/c2_btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="="
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@+id/c2_compareSign"
            app:layout_constraintStart_toStartOf="@+id/c2_compareSign"
            app:layout_constraintTop_toBottomOf="@+id/c2_denom2" />

        <Button
            android:id="@+id/c2_btnLess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/lessThan"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/c2_btnEqual"
            app:layout_constraintStart_toEndOf="@+id/c2_btnEqual"
            app:layout_constraintTop_toTopOf="@+id/c2_btnEqual" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/c2_txtInstruction"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="compare the two fractions"
                app:layout_constraintBottom_toBottomOf="@+id/gifAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gifAvatar"
                app:layout_constraintTop_toTopOf="@+id/gifAvatar" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>