                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/od_txtNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintBottom_toTopOf="@+id/od_imgLine4"
                app:layout_constraintEnd_toEndOf="@+id/od_imgLine4"
                app:layout_constraintStart_toStartOf="@+id/od_imgLine4" />

            <TextView
                android:id="@+id/od_txtDenom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textAlignment="center"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="@+id/od_imgLine4"
                app:layout_constraintStart_toStartOf="@+id/od_imgLine4"
                app:layout_constraintTop_toBottomOf="@+id/od_imgLine4" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/od_fraction3"
